@model Proffessional_Portfolio.DAL.Entities.Portfolio
@{
	ViewData["Title"] = "CreatePortfolio";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="main-panel">
	<div class="content">
		<div class="container-fluid">

			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Add Portfolio</div>
						</div>
						<div class="card-body">
							<div class="card-sub">
								You can add your projects:
							</div>
							<a href="/Portfolio" type="button" class="btn btn-success float-right my-2">Back List</a>

							<div class="form">
								<form asp-action="UpdatePortfolio" method="post">
									<input type="hidden" class="form-control" asp-for="PortfolioId" id="" required>

									<div class="form-group">
										<label for="exampleFormControlInput1">Title</label>
										<input type="text" class="form-control" asp-for="Title" id="" placeholder="@Model.Title" required>
									</div>
									<div class="form-group">
										<label for="exampleFormControlInput1">SubTitle</label>
										<input type="text" class="form-control" asp-for="SubTitle" id="" placeholder="@Model.SubTitle" required>
									</div>
									<div class="form-group">
										<label for="exampleFormControlInput1">ImageUrl</label>
										<input type="text" class="form-control" asp-for="ImageUrl" id="" placeholder="@Model.ImageUrl" required>
									</div>
									<div class="form-group">
										<label for="exampleFormControlInput1">Url</label>
										<input type="text" class="form-control" asp-for="Url" id="" placeholder="@Model.Url" required>
									</div>

									<div class="form-group">
										<label for="exampleFormControlTextarea1">Description</label>
										<textarea class="form-control" asp-for="Description" id="" rows="6" required placeholder="@Model.Description"></textarea>
									</div>
									<button class="btn btn-success">Update</button>
								</form>
							</div>
						</div>
					</div>


				</div>

			</div>
		</div>
	</div>

</div>

