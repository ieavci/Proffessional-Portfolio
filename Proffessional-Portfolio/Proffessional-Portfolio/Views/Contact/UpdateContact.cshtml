@model Proffessional_Portfolio.DAL.Entities.Contact

@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="main-panel">
	<div class="content">
		<div class="container-fluid">

			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Update Contact Section</div>
						</div>
						<div class="card-body">
							<div class="card-sub">
								You can update your Contact Section:
							</div>


							<div class="form">

								<form asp-action="UpdateContact" method="post">
									<input type="hidden" asp-for="ContactID" />
									<div class="form-group">
										<label for="exampleFormControlInput1">Title</label>
										<input type="text" class="form-control" asp-for="Title" id="" placeholder="@Model.Title" required>
									</div>
									<div class="form-group">
										<label for="exampleFormControlInput1">Phone1</label>
										<input type="text" class="form-control" asp-for="Phone1" id="" placeholder="@Model.Phone1" required>
									</div>
									<div class="form-group">
										<label for="exampleFormControlInput1">Email1</label>
										<input type="text" class="form-control" asp-for="Email1" id="" placeholder="@Model.Email1" required>
									</div>
									<div class="form-group">
										<label for="exampleFormControlInput1">Address</label>
										<input type="text" class="form-control" asp-for="Address" id="" placeholder="@Model.Address" required>
									</div>
									<div class="form-group">
										<label for="exampleFormControlTextarea1">Description</label>
										<textarea class="form-control" asp-for="Description" id="" placeholder="@Model.Description" rows="4" required></textarea>
									</div>
									<button class="btn btn-success">Update</button>
								</form>
							</div>
						</div>
					</div>


				</div>

			</div>
		</div>
	</div>

</div>

