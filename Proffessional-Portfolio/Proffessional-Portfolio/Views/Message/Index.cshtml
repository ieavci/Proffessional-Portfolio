
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}
@model List<Proffessional_Portfolio.DAL.Entities.Message>
<div class="main-panel">
	<div class="content">
		<div class="container-fluid">

			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Mail Box</div>
						</div>
						<div class="card-body">
							<div class="card-sub">
								You can perform transactions related to messages :
							</div>

							<table class="table mt-3">

								<thead>
									<tr>
										<th scope="col">#</th>
										<th scope="col">Name Surname</th>
										<th scope="col">Subject</th>
										<th scope="col">Email</th>
										<th scope="col">Send Date</th>
										<th scope="col">Mail Detail</th>
										<th scope="col">isRead</th>
										<th scope="col">Delete</th>
									</tr>
								</thead>
								<tbody>

									@foreach (var item in Model)
									{
										<tr>
											<td>@item.MessageId</td>
											<td>@item.NameSurname</td>
											<td>@item.Subject</td>
											<td>@item.Email</td>
											<td>@item.SendDate</td>
											<td><a href="/Message/OpenMail/@item.MessageId" type="button" class="btn btn-warning">Open Mail</td>
											@if (item.isRead==true)
											{
												<td><a href="/Message/ChangeStateFalse/@item.MessageId" type="button" class="btn btn-dark">Mark as Read</td>
											}
											else
											{
												<td><a href="/Message/ChangeStateTure/@item.MessageId" type="button" class="btn btn-outline-dark">Mark as Unread</td>
											}
											<td><a href="/Message/DeleteMessage/@item.MessageId" type="button" class="btn btn-danger">Delete</a></td>
										</tr>
									}


								</tbody>
							</table>
						</div>
					</div>


				</div>

			</div>
		</div>
	</div>

</div>


