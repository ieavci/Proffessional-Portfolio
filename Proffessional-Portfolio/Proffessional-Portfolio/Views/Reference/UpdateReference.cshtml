@model Proffessional_Portfolio.DAL.Entities.Testimonial
@{
	ViewData["Title"] = "CreateReference";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="main-panel">
	<div class="content">
		<div class="container-fluid">

			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Update Reference</div>
						</div>
						<div class="card-body">
							<div class="card-sub">
								You edit add your testimonials:
							</div>
							<a href="/Reference" type="button" class="btn btn-success float-right my-2">Back List</a>

							<div class="form">
								<form asp-action="UpdateReference" method="post">
									<input type="hidden" class="form-control" asp-for="TestimonialId" id="" required>

									<div class="form-group">
										<label for="exampleFormControlInput1">NameSurname</label>
										<input type="text" class="form-control" asp-for="NameSurname" id="" required>
									</div>
									<div class="form-group">
										<label for="exampleFormControlInput1">Title</label>
										<input type="text" class="form-control" asp-for="Title" id="" required>
									</div>

									<div class="form-group">
										<label for="exampleFormControlInput1">ImageUrl</label>
										<input type="text" class="form-control" asp-for="ImageUrl" id="" required>
									</div>

									<div class="form-group">
										<label for="exampleFormControlTextarea1">Description</label>
										<textarea class="form-control" asp-for="Description" id="" rows="6" required></textarea>
									</div>
									<button class="btn btn-success">Update</button>
								</form>
							</div>
						</div>
					</div>


				</div>

			</div>
		</div>
	</div>

</div>

