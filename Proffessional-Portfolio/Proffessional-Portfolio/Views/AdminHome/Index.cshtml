
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title text-center font-weight-bold">Professional Portfolio Admin Panel</div>
                            <div class="card-category text-center">Manage your professional portfolio with ease</div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                                <p class="text-muted">
                                    Welcome to the admin panel. Here, you can update your profile, manage your experiences, showcase your skills, and much more. Navigate through the sidebar to explore the different features.
                                </p>
                            </div>

                            <div class="row">
                               <div class="col-md-4 text-center">
                                    <div class="feature-box">
                                        <i class="fa-solid fa-address-card feature-icon"></i>
                                        <h4>About</h4>
                                        <p>Update your bio and personal details.</p>
                                    </div>
                                </div>
                               <div class="col-md-4 text-center">
                                    <div class="feature-box">
                                        <i class="fa-solid fa-star feature-icon"></i>
                                        <h4>Experience</h4>
                                        <p>Highlight your professional experiences.</p>
                                    </div>
                                </div>
                               <div class="col-md-4 text-center">
                                    <div class="feature-box">
                                        <i class="fa-brands fa-creative-commons-by feature-icon"></i>
                                        <h4>Features</h4>
                                        <p>Showcase key features and competencies.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-4">
                               <div class="col-md-4 text-center">
                                    <div class="feature-box">
                                        <i class="fa-solid fa-file-signature feature-icon"></i>
                                        <h4>Contact</h4>
                                        <p>Manage your contact information.</p>
                                    </div>
                                </div>
                               <div class="col-md-4 text-center">
                                    <div class="feature-box">
                                        <i class="fa-solid fa-magnifying-glass-chart feature-icon"></i>
                                        <h4>Portfolio</h4>
                                        <p>Showcase your projects and achievements.</p>
                                    </div>
                                </div>
                                <div class="col-md-4 text-center">
                                    <div class="feature-box">
                                        <i class="fa-solid fa-hand-sparkles feature-icon"></i>
                                        <h4>Skills</h4>
                                        <p>Highlight your professional skills.</p>
                                    </div>
                                </div>
                            </div>

                            

                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

</div>
